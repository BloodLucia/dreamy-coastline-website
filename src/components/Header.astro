---
import NavLink from "./NavLink.astro";
import { SITE_TITLE, SITE_URL } from "../config";
---

<header class="bg-white box-border border-b">
  <div class="md:max-w-[640px] mx-auto">
    <div class="flex justify-center items-center min-h-[80px]">
      <a href={SITE_URL} class="text-4xl max-md:text-3xl font-brand">
        <h1>{SITE_TITLE}</h1>
      </a>
    </div>
    <nav class="grid grid-cols-[repeat(4,_1fr)] gap-0 items-stretch text-md">
      <NavLink href="/">主页</NavLink>
      <NavLink href="/music">音乐</NavLink>
      <NavLink href="/show">演出</NavLink>
      <NavLink href="/about">关于</NavLink>
    </nav>
  </div>
</header>